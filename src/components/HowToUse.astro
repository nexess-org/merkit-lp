  {
    number: "1",
    title: "無料登録",
    description: "アカウント作成とクレジットカードを登録。1週間は無料でお試し。",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" /></svg>`,
  },
  {
    number: "2",
    title: "拡張機能をインストール",
    description: "Chrome ウェブストアから Merkit を追加。",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" /></svg>`,
  },
  {
    number: "3",
    title: "商品を選択",
    description: "出品一覧ページで対象商品にチェック。",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    number: "4",
    title: "設定して実行",
    description: "価格変更またはコメントの設定を入力して実行。",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" /></svg>`,
  },
];
---

<section id="how-to-use" class="py-24 md:py-32 section-dark relative overflow-hidden">
  <!-- Background decorations -->
  <div class="orb orb-red w-72 h-72 top-20 -left-36 opacity-20"></div>
  <div class="orb orb-white w-64 h-64 bottom-10 right-10 opacity-10"></div>

  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <!-- Section header -->
    <div class="text-center mb-16 scroll-animate">
      <span class="badge badge-primary mb-4">How to Use</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 section-title">
        使い方
      </h2>
      <p class="text-lg text-dark-200 section-subtitle">
        4ステップで簡単に始められます
      </p>
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Vertical line connecting steps -->
      <div class="absolute left-7 top-0 bottom-0 w-px bg-gradient-to-b from-primary-500/50 via-primary-500/20 to-transparent hidden md:block"></div>

      <div class="space-y-6">
        {
          steps.map((step, index) => (
            <div
              class="glass-card rounded-2xl p-6 md:pl-20 relative card-hover scroll-animate"
              style={`animation-delay: ${0.15 * (index + 1)}s`}
            >
              <!-- Step number circle -->
              <div class="md:absolute md:left-0 md:top-1/2 md:-translate-y-1/2 md:-translate-x-1/2 w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-500 to-primary-600 text-white flex items-center justify-center font-bold text-xl shrink-0 mb-4 md:mb-0 glow-red-sm">
                {step.number}
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg icon-container flex items-center justify-center shrink-0 text-primary-400 md:hidden">
                  <Fragment set:html={step.icon} />
                </div>
                <div>
                  <h3 class="text-xl font-bold text-white mb-1">{step.title}</h3>
                  <p class="text-dark-300">{step.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  // Scroll animation observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll('#how-to-use .scroll-animate').forEach((el) => {
    observer.observe(el);
  });
</script>
