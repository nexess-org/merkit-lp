---
interface Props {
  ctaUrl: string;
}

const { ctaUrl } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!-- Final CTA Section -->
<section class="py-24 md:py-32 relative overflow-hidden">
  <!-- Background with gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-dark-800 to-dark-900"></div>

  <!-- Decorative elements -->
  <div class="absolute inset-0">
    <div class="orb orb-red w-[600px] h-[600px] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-20"></div>
  </div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 pattern-grid opacity-20"></div>

  <div class="max-w-3xl mx-auto px-6 text-center relative z-10">
    <div class="scroll-animate">
      <span class="badge badge-success mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 mr-1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        1週間無料トライアル
      </span>

      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 section-title">
        今すぐ始めよう
      </h2>
      <p class="text-dark-200 text-lg mb-10 max-w-xl mx-auto">
        面倒な価格変更作業から解放されましょう。<br class="hidden md:block" />
        1週間の無料トライアルで、効果を実感してください。
      </p>

      <a
        href={ctaUrl}
        class="inline-flex items-center justify-center px-10 py-5 text-lg font-semibold text-white rounded-xl btn-primary glow-red animate-pulse-glow transition-all group"
      >
        <span>無料で始める</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>

      <p class="text-dark-400 text-sm mt-4">
        ¥2,980/月 - いつでもキャンセル可能
      </p>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="footer-gradient py-12 border-t border-white/5">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <!-- Logo -->
      <div class="text-2xl font-bold text-white font-display tracking-tight">
        Merkit
      </div>

      <!-- Navigation -->
      <nav class="flex flex-wrap justify-center items-center gap-6 text-sm">
        <a href="#features" class="text-dark-300 hover:text-white transition-colors">機能</a>
        <a href="#demo" class="text-dark-300 hover:text-white transition-colors">デモ</a>
        <a href="#pricing" class="text-dark-300 hover:text-white transition-colors">料金</a>
        <a href="#reviews" class="text-dark-300 hover:text-white transition-colors">レビュー</a>
        <a href="#contact" class="text-dark-300 hover:text-white transition-colors">お問い合わせ</a>
      </nav>

      <!-- Copyright -->
      <div class="text-dark-400 text-sm">
        &copy; {currentYear} Merkit. All rights reserved.
      </div>
    </div>
  </div>
</footer>

<script>
  // Scroll animation observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll('footer').forEach((el) => {
    const scrollElements = el.previousElementSibling?.querySelectorAll('.scroll-animate');
    scrollElements?.forEach((e) => observer.observe(e));
  });
</script>
